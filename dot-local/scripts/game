#!/usr/bin/env bash

function input-validation() {
    if [[ $# -ne 1 ]]; then
        echo "Only one argument is required, on or off"
        exit
    elif [[ $1 != "on" ]] && [[ $1 != "off" ]]; then
        echo "Only one argument is required, on or off"
        exit
    fi
}

function game-on() {
    sudo i8kctl fan1 2
    sudo i8kctl fan3 2
    sudo systemctl stop keyboard-mapping.service
    battery-monitor -k
    ~/.local/python/ty-plug -s on
}

function game-off() {
    sudo i8kctl fan1 0
    sudo i8kctl fan3 1
    sudo systemctl start keyboard-mapping.service
    battery-monitor -q --min=64 --max=67
}

function main() {
    input-validation "$@"
    if [[ $1 == "on" ]]; then
        game-on
    else
        game-off
    fi
}

main "$@"
